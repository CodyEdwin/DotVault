<?xml version="1.0" encoding="UTF-8"?>
<project name="DotVault">
    <description>Linux Dotfiles Backup Manager</description>
    <version>1.0.0</version>
    
    <!-- Build Information -->
    <build>
        <source>src/main/java</source>
        <resource>src/main/resources</resource>
    </build>
    
    <!-- Dependencies -->
    <dependencies>
        <!-- JavaFX -->
        <dependency name="javafx-base" version="21.0.1"/>
        <dependency name="javafx-controls" version="21.0.1"/>
        <dependency name="javafx-fxml" version="21.0.1"/>
        <dependency name="javafx-graphics" version="21.0.1"/>
        <dependency name="javafx-web" version="21.0.1"/>
        
        <!-- JSON -->
        <dependency name="gson" version="2.10.1"/>
        
        <!-- Compression -->
        <dependency name="commons-compress" version="1.25.0"/>
        
        <!-- Logging -->
        <dependency name="slf4j-api" version="2.0.9"/>
        <dependency name="slf4j-simple" version="2.0.9"/>
        
        <!-- Annotations -->
        <dependency name="annotations" version="24.0.1"/>
    </dependencies>
</project>
