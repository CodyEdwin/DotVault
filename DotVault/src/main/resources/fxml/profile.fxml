<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dotvault.controller.ProfileController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <SplitPane dividerPositions="0.35" VBox.vgrow="ALWAYS">
        
        <!-- Left Side - Profile List -->
        <VBox spacing="10" styleClass="profiles-panel">
            <Label text="Saved Profiles" styleClass="panel-header"/>
            <ListView fx:id="profileListView" VBox.vgrow="ALWAYS" styleClass="profile-list"/>
        </VBox>
        
        <!-- Right Side - Profile Details -->
        <VBox spacing="15" styleClass="profile-details">
            <Label text="Profile Details" styleClass="panel-header"/>
            
            <VBox spacing="10">
                <Label text="Profile Name" styleClass="form-label"/>
                <TextField fx:id="profileNameField" promptText="Enter profile name"/>
            </VBox>
            
            <VBox spacing="10">
                <Label text="Description" styleClass="form-label"/>
                <TextArea fx:id="profileDescriptionField" promptText="Enter description" prefRowCount="3"/>
            </VBox>
            
            <Separator/>
            
            <GridPane vgap="10" hgap="10">
                <Label text="Created:" styleClass="info-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="createdAtLabel" text="Unknown" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                
                <Label text="Last Used:" styleClass="info-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label fx:id="lastUsedLabel" text="Never" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                
                <Label text="Items:" styleClass="info-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Label fx:id="itemCountLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </GridPane>
            
            <Separator/>
            
            <!-- Quick Actions -->
            <HBox spacing="10">
                <Button fx:id="selectAllProfileButton" text="Select All" mnemonicParsing="false" onAction="#onSelectAllProfile" styleClass="toolbar-button"/>
                <Button fx:id="deselectAllProfileButton" text="Deselect All" mnemonicParsing="false" onAction="#onDeselectAllProfile" styleClass="toolbar-button"/>
            </HBox>
            
            <Region VBox.vgrow="ALWAYS"/>
            
            <!-- Action Buttons -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="deleteProfileButton" text="Delete" mnemonicParsing="false" onAction="#onDeleteProfile" styleClass="danger-button"/>
                <Button fx:id="loadProfileButton" text="Load Profile" mnemonicParsing="false" onAction="#onLoadProfile" styleClass="secondary-button"/>
                <Button fx:id="saveProfileButton" text="Save Profile" mnemonicParsing="false" onAction="#onSaveProfile" styleClass="primary-button"/>
            </HBox>
            
        </VBox>
        
    </SplitPane>
</VBox>
